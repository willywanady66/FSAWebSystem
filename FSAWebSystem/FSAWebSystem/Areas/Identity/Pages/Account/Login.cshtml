<body class="bg-gradient-primary">

	<div class="container">

		<!-- Outer Row -->
		<div class="row justify-content-center">

			<div class="col-sm-12 col-md-6">
				<div class="card o-hidden border-0 shadow-lg my-5">
					<div class="card-body p-0">
						<!-- Nested Row within Card Body -->
						<div class="row">
							<div class="col-12">
								<div class="p-5">
									<div class="text-center">
										<div class="col-6 offset-3 h-100">
											<img src="~/assets/unileverlogo.svg" class="img-fluid h-100">
										</div>


										<h1 class="h4 text-gray-900 mb-4">FSA SYSTEM</h1>
									</div>
									<form class="user" id="account" method="post">
										<div class="form-group">
											<label asp-for="Input.Email" class="form-label"></label>
											<div class="input-group mb-3">
												<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
												<div class="input-group-append">
													<div class="input-group-text">
														<span class="fas fa-envelope"></span>
													</div>
												</div>
											</div>
											<span asp-validation-for="Input.Email" class="text-danger"></span>
										</div>
										<div class="form-group">
											<label asp-for="Input.Password" class="form-label"></label>
											<div class="input-group mb-3">
												<input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
												
												<div class="input-group-append">
													<div class="input-group-text">
														<span class="fas fa-key"></span>
													</div>
												</div>
											</div>
											<span asp-validation-for="Input.Password" class="text-danger"></span>
										</div>
										<div class="form-group">
											<div class="checkbox" style="display:inline-block">
												<label asp-for="Input.RememberMe" class="form-label">
													<input class="form-check-input" asp-for="Input.RememberMe" />
													@Html.DisplayNameFor(m => m.Input.RememberMe)
												</label>
											</div>
											<a href="~/Identity/Account/ForgotPassword" style="display:inline-block; float:right">Forgot Password?</a>
										</div>
									
											@Html.ValidationSummary(false, "", new {@class ="text-danger"})
										<button id="login-submit" type="submit" class="btn btn-primary btn-user btn-block">Log in</button>

									</form>
									<hr />
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>

		</div>

	</div>
</body>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}


